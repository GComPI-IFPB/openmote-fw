import os

Import('env')

localEnv = env.Clone()

target = 'test-cc1200'
source = ['main.cpp']

lib_name = ['board', 'drivers', 'platform', 'stack', 'kernel', 'cc2538']
lib_path =  os.path.join('#', 'bin', localEnv['board'])

output = localEnv.Program(
    target = target,
    source = source,
    LIBS = lib_name,
    LIBPATH = lib_path
)

Return('output')
