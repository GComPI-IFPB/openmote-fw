#include "gpio.h"
#include "interrupt.h"
#include "ioc.h"
#include "sys_ctrl.h"
#include "uart.h"

#include "hw_gpio.h"
#include "hw_ioc.h"
#include "hw_memmap.h"
#include "hw_sys_ctrl.h"

/*******************************************************************************/

#define BSP_ANTENNA_BASE        GPIO_D_BASE
#define BSP_ANTENNA_INT         GPIO_PIN_5
#define BSP_ANTENNA_EXT         GPIO_PIN_4

#define BSP_VREG_BASE           GPIO_B_BASE
#define BSP_VREG_GPIO           GPIO_PIN_1

#define BSP_BUTTON_BASE         GPIO_C_BASE
#define BSP_BUTTON_USER         GPIO_PIN_3

#define PIN_UART_RXD            GPIO_PIN_0 // PA0 is UART RX
#define PIN_UART_TXD            GPIO_PIN_1 // PA1 is UART TX

#define BSP_LED_BASE            GPIO_C_BASE
#define BSP_LED_RED             GPIO_PIN_4
#define BSP_LED_ORANGE          GPIO_PIN_5
#define BSP_LED_YELLOW          GPIO_PIN_6
#define BSP_LED_GREEN           GPIO_PIN_7
#define BSP_LED_ALL             (BSP_LED_RED | \
                                 BSP_LED_ORANGE | \
                                 BSP_LED_YELLOW | \
                                 BSP_LED_GREEN)

#define WAIT_TICKS              ( 160000 )

/*******************************************************************************/

void system_init(void);
void gpio_init(void);
void leds_init(void);

void button_init(void);
void button_toggle(void);

void uart_init();
void uart_tx_message(uint8_t * message, uint16_t size);

void radio_init(void);
void radio_tx_packet(void);
void radio_rx_packet(void);

void antenna_init(void);
void antenna_internal(void);
void antenna_external(void);

void regulator_init(void);
void regulator_3V3(void);
void regulator_2V1(void);

/*******************************************************************************/

